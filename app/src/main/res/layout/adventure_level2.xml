<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D4059"
    tools:context=".AdventureLevel2">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="414dp"
        android:layout_height="38dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="44dp"
        android:layout_height="688dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"></LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="48dp"
        android:layout_height="693dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"></LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView4"
        android:layout_width="285dp"
        android:layout_height="583dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/castle_wall"
        app:strokeColor="#E55555"
        app:strokeWidth="15dp" />

    <ImageView
        android:id="@+id/start_vine2"
        android:layout_width="205dp"
        android:layout_height="193dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:rotation="39"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/vine" />

    <ImageView
        android:id="@+id/start_vine"
        android:layout_width="76dp"
        android:layout_height="192dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="47dp"
        android:rotation="21"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.767"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/vine" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="246dp"
        android:layout_height="111dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="92dp"
        android:rotation="-54"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/vine" />

    <TextView
        android:id="@+id/path_B_txtView"
        android:layout_width="62dp"
        android:layout_height="49dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="B↑"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/flower_node_2"
        android:layout_width="111dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="196dp"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/flower" />

    <ImageView
        android:id="@+id/flower_node_1"
        android:layout_width="111dp"
        android:layout_height="55dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/flower" />

    <TextView
        android:id="@+id/path_A_txtView"
        android:layout_width="123dp"
        android:layout_height="48dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="292dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/abril_fatface"
        android:gravity="center"
        android:text="A ↑/A ↓"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/flower_node_goal"
        android:layout_width="125dp"
        android:layout_height="61dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="94dp"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/flower_goal" />

    <ImageView
        android:id="@+id/knight"
        android:layout_width="152dp"
        android:layout_height="133dp"
        android:layout_marginBottom="28dp"
        android:foregroundGravity="center|fill"
        android:scaleType="fitCenter"
        android:maxLength="2"
        android:src="@drawable/idle_knight"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2" />

    <EditText
        android:id="@+id/inputEditText"
        android:digits="abAB"
        android:layout_width="159dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FDFDFD"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="text"
        android:shadowColor="#000000"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.237"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/Question_txtView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/movebtn"
        android:onClick="Move"
        android:layout_width="78dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_background_color"
        android:text="Go!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/Question_txtView" />

    <TextView
        android:id="@+id/Question_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="casual"
        android:text="Max Character Input: 2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/start_image"
        android:layout_width="101dp"
        android:layout_height="86dp"
        android:layout_marginBottom="40dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:srcCompat="@drawable/idle_knight" />

</androidx.constraintlayout.widget.ConstraintLayout>